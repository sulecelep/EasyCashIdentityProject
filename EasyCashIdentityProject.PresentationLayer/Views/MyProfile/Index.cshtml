
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
   @* Layout Olarak Kullanıyoruz*@
@await Component.InvokeAsync("_CustomerLayoutHeadPartial")
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            @await Component.InvokeAsync("_CustomerLayoutSidebarPartial")

            <!-- top navigation -->
            @await Component.InvokeAsync("_CustomerLayoutNavbarPartial")
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            @await Component.InvokeAsync("_CustomerLayoutFooterPartial")

            <!-- /footer content -->
        </div>
    </div>
    @await Component.InvokeAsync("_CustomerLayoutScriptPartial")


</body>
</html>
